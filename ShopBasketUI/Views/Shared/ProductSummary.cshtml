@model ShopBasketLibrary.Entities.Product

<div class="well">
    <h3>
        <strong>@Model.Name</strong>
        <span class="pull-right label label-primary">@Model.PriceNetto.ToString("c")</span>
    </h3>

    @using(Html.BeginForm("AddToBasket", "Basket"))
    {
        <div class="pull-right">
            @Html.HiddenFor(x=>x.Id)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
            <input type="submit" name="Dodaj do koszyka" class="btn btn-success" />

        </div>

    }

    <span class="lead">@Model.Description</span>
</div>